@model Pie

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageUrl">
    <div class="caption-full">
        <h3 class="pull-right">@Model.Price</h3>
        <h3>
            <a href="#" id="pieName">@Model.Name</a>
        </h3>
        <h4>@Model.ShortDescription</h4>
        <p>@Model.LongDescription</p>
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-pieId="@Model.PieId">Add to cart</a>
        </p>
        @if (Model.ExtraDescription != null)
        {
            <div class="thumbnail">
                <p>@Model.ExtraDescription</p>
            </div>
        }
        <div class="form-group">
            <input type="hidden" id="pieId" value="@Model.PieId" />
            <label class="control-label" for="newNameInput">Update name</label>
            <input type="text" name="newName" class="form-control" id="newNameInput" placeholder="Enter new name">
        </div>
        <button class="btn btn-default" id="newNameBtn">Update</button>
        
        <show-if-authorized/>
    </div>
</div>